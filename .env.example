# 环境配置模板 - 复制为 .env 并修改相应值
# 应用配置
DEBUG=false
SECRET_KEY=your-super-secret-production-key-2024
APP_NAME="Music Downloader API"
APP_VERSION="1.0.0"

# 域名配置 (重要：修改为您的实际域名)
DOMAIN=https://yourdomain.com
# 开发环境示例: DOMAIN=http://localhost:8000

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=music_user
DB_PASSWORD=your_secure_password
DB_NAME=music_downloader_prod

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=1

# Spotify API配置 (需要申请自己的)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# 下载配置
DOWNLOAD_DIR=/www/wwwroot/yourdomain.com/downloads
MAX_DOWNLOAD_CONCURRENT=10

# 日志配置
LOG_LEVEL=WARNING
LOG_FILE=/www/wwwroot/yourdomain.com/logs/app.log

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# 性能配置
MAX_WORKERS=4
TIMEOUT=30
KEEP_ALIVE=2